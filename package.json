{
  "name": "root-next-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest --run",
    "test:coverage": "vitest --run --coverage",
    "test:watch": "vitest",
    "format": "prettier --write --ignore-unknown --config .prettierrc ./src",
    "format:check": "prettier --check --ignore-unknown --config .prettierrc ./src",
    "type:check": "tsc --noEmit",
    "prepare": "husky",
    "precommit": "lint-staged",
    "commitlint": "commitlint --edit"
  },
  "dependencies": {
    "next": "14.2.32",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20.19.15",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^2.1.9",
    "eslint": "^8.57.1",
    "eslint-config-next": "14.2.32",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-unused-imports": "^3.2.0",
    "husky": "^9.1.7",
    "jsdom": "^24.1.3",
    "lint-staged": "^15.5.2",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.2",
    "vitest": "^2.1.9"
  }
}
